@media handheld, only screen and (max-width: 768px)
    header
        &.col1, .col2, .col3, .col4, .col5, .col6, .col7, .col8, .col9, .col10, .col11, .col12, .col13, .col14, .col15, .col16
            margin-top 0

    nav
        text-align center
    
    .col1, .col2, .col3, .col4, .col5, .col6, .col7, .col8, .col9, .col10, .col11, .col12, .col13, .col14, .col15, .col16
        column(12)
        margin-top 10px

    .desktop
        display none !important

    .inline
        display inherit

    .mobile
        display none !important

    .tablet
        display inherit !important
    
@media handheld, only screen and (max-width: 540px)
    .desktop
        display none !important

    .mobile
        display inherit !important

    .tablet
        display none !important

    #mainNav
        display none

    [data-label='logs']
        display none

    #content .padding_big
        padding 0

    .isList #container, .isContent #sidebar
        position absolute
        top 0
        z-index -1
        pointer-events none
        height 100%
        width 100%
        width 0

    .padding_big
        padding 0

